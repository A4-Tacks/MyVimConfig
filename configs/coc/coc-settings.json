{
    "languageserver": {
        "efm": {
            "command": "efm-langserver",
            "args": [],
            "filetypes": [
                "vim",
                "eruby",
                "markdown",
                "yaml"
            ]
        },
        "ocaml-lsp": {
            "command": "opam",
            "args": ["exec", "--", "ocamllsp"],
            "filetypes": ["ocaml", "reason"]
        }
        //"bashls": {
        //    "command": "~/.vim/MyVimConfig/virtual_cmd/bash-language-server/main",
        //    "args": [
        //        "start"
        //    ],
        //    "filetypes": [
        //        "sh", "bash"
        //    ],
        //    "ignoredRootPaths": [
        //        "~"
        //    ]
        //}
    },
    "snippets.loadVSCodeProjectSnippets": false,
    "snippets.userSnippetsDirectory": "~/.vim/MyVimConfig/configs/coc/plugged/snippets/",
    "snippets.priority": 900,
    "snippets.extends": {
        "zsh": [
            "sh",
            "bash"
        ],
        "bash": [
            "sh"
        ]
    },
    "codeLens.enable": true,
    "codeLens.position": "eol",
    "codeLens.subseparator": "| ",
    "codeLens.separator": "¥",
    "tree.closedIcon": "▶",
    "tree.openedIcon": "▼",
    "tree.key.toggle": "o",
    "tree.key.close": "q",
    "tree.key.collapseAll": "u",

    "rust-analyzer.updates.checkOnStartup": false,
    "rust-analyzer.check.workspace": false,
    "rust-analyzer.completion.callable.snippets": "fill_arguments",
    "rust-analyzer.inlayHints.reborrowHints.enable": "always",
    "rust-analyzer.inlayHints.expressionAdjustmentHints.mode": "prefer_postfix",
    "rust-analyzer.inlayHints.expressionAdjustmentHints.hideOutsideUnsafe": true,
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
    "rust-analyzer.inlayHints.closureCaptureHints.enable": false,
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.run.enable": false,
    "rust-analyzer.lens.debug.enable": false,
    "rust-analyzer.lens.references.adt.enable": true,
    "rust-analyzer.lens.references.trait.enable": true,
    "rust-analyzer.lens.references.method.enable": true,
    "rust-analyzer.lens.implementations.enable": true,

    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

    "jedi.enable": true,
    "jedi.trace.server": "messages",
    "jedi.diagnostics.enable": false,
    "jedi.diagnostics.didOpen": true,
    "jedi.diagnostics.didChange": true,
    "jedi.diagnostics.didSave": true,
    "pyright.enable": true,
    "pyright.disableDiagnostics": false,
    "pyright.disableDocumentation": false,
    "pyright.disableCompletion": true,
    "pyright.completion.importSupport": true,
    "pyright.completion.snippetSupport": true,
    "toml.formatter.indentString": "    "
}
